---
import Icon from '../Icon.astro'
import ThemeToggle from './navbar/ThemeToggle.astro'
---

<nav
  class="py-5 container mx-auto flex items-center gap-5 flex-col md:flex-row"
>
  <div class="flex-1 flex items-center">
    <img src="/logo.webp" alt="logo" class="w-10 h-10 rounded" />
  </div>
  <ul class="menu">
    <li>
      <a href="/"><Icon name="home" width="32" height="32" /> Home</a>
    </li>
    <li>
      <a href="#about"
        ><Icon name="info-square" width="32" height="32" /> About</a
      >
    </li>
    <li>
      <a href="#contact"><Icon name="mail" width="32" height="32" /> Contact</a>
    </li>
  </ul>
  <div
    class="fixed top-5 right-2 md:static md:flex-1 md:justify-end md:text-right"
  >
    <ThemeToggle />
  </div>
</nav>
<style>
  .menu {
    @apply flex-1 flex gap-5 justify-center items-center;
  }

  .menu > li > a {
    @apply flex gap-1 items-center;
  }
</style>
