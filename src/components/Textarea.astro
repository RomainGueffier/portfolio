---
import icons from '@tabler/icons'

const { IconMessage } = icons

export interface Props {
  name: string
  placeholder?: string
  value?: string
  required?: boolean
  pattern?: string
  title?: string
}

const { placeholder, value, name, required = false } = Astro.props as Props
---

<label class="relative block w-full">
  <span class="sr-only">{placeholder}</span>
  <span class="absolute inset-y-0 left-0 flex top-3 pl-2">
    <IconMessage stroke={1} width={16} height={16} />
  </span>
  <textarea
    name={name}
    class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow focus:outline-none focus:border-slate-500 focus:ring-slate-500 focus:ring-1 sm:text-sm dark:bg-slate-700 dark:text-slate-100 dark:placeholder:text-slate-300"
    placeholder={placeholder}
    value={value}
    required={required}
    rows="10"></textarea>
</label>
