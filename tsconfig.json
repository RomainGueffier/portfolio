{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/libs/*": ["src/libs/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".astro"],
  "include": ["src", "api"]
}
